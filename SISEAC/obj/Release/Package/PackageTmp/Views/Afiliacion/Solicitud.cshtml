@{
    ViewBag.Title = "Afiliacion";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-12">
        <h2>@ViewData["SubTitle"]</h2>
        <ol class="breadcrumb">
            @foreach (var i in ViewData["BreadCrumb"] as IEnumerable<string>)
            {
                <li>
                    <a>@i.ToString()</a>
                </li>
            }
        </ol>
    </div>
</div>

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="ibox float-e-margins">
            <div class="ibox-title">
                <h5> <i class="fa fa-user-plus"></i> Solicitud de Afiliación </h5>
                <div class="ibox-tools">

                </div>
                <div class="ibox-content">
                    <form id="frmSolicitud" class="form-horizontal" method="post">
                        
